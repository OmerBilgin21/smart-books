{
  "name": "smart-books",
  "version": "1.0.0",
  "description": "smart book suggestions",
  "main": "app.js",
  "engines": {
    "node": "22.13.1",
    "npm": "10.9.2"
  },
  "engineStrict": true,
  "scripts": {
    "test": "jest",
    "prod": "npm run build && NODE_ENV=production node ./dist/app.js",
    "build": "rm -rf dist;npx tsc",
    "dev": "nodemon src/app.ts",
    "m:generate": "npx ts-node ./node_modules/typeorm/cli.js migration:generate ./src/infrastructure/db/migrations/$npm_config_name -d ./src/infrastructure/db/ormconfig.ts",
    "m:run": "npx ts-node ./node_modules/typeorm/cli.js migration:run -d ./src/infrastructure/db/ormconfig.ts",
    "m:show": "npx ts-node ./node_modules/typeorm/cli.js migration:show -d ./src/infrastructure/db/ormconfig.ts",
    "lint": "eslint 'src/**/*.{ts,tsx}' && npx tsc --noEmit",
    "lint:fix": "eslint 'src/**/*.{ts,tsx}' --fix",
    "format": "prettier --write 'src/**/*.{ts,tsx,js,json,md}'"
  },
  "nodemonConfig": {
    "verbose": true,
    "watch": "src/",
    "delay": "1000",
    "legacyWatch": true,
    "restartable": "r",
    "max_restarts": "5",
    "env": {
      "NODE_ENV": "debug",
      "DB_HOST": "localhost",
      "APP_PORT": 8000,
      "DB_PORT": 5432,
      "LLM_URL": "http://localhost:11434/api"
    },
    "ext": "ts",
    "execMap": {
      "ts": "ts-node"
    }
  },
  "author": "Omer Bilgin",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.7.7",
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.3",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.21.1",
    "pg": "^8.13.1",
    "typeorm": "^0.3.20",
    "typeorm-naming-strategies": "^4.1.0",
    "uuid": "^11.0.5"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.18.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.1",
    "@types/uuid": "^10.0.0",
    "esbuild": "^0.24.0",
    "eslint-prettier-personal-config-ob": "^0.0.11",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "nodemon": "^3.1.9",
    "prettier": "^3.3.3",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.23.0"
  }
}
