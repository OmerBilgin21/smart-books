FROM node:22.13.1

# set workdir and copy manifest only
WORKDIR /app
COPY package*.json tsconfig.json ./

# install *all* deps so nodemon + ts‑node are available
RUN npm install

# mount your code in docker‑compose, so no COPY here

EXPOSE 8000

# run nodemon in TS‑loader mode
CMD ["npm", "run", "dev"]
