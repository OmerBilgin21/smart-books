{
  "name": "smart-books",
  "version": "1.0.0",
  "description": "smart book suggestions",
  "main": "app.js",
  "type": "module",
  "engines": {
    "node": "22.13.1",
    "npm": "11.1.0"
  },
  "engineStrict": true,
  "scripts": {
    "test": "jest",
    "prod": "rm -rf dist;tsc;NODE_ENV=production node ./dist/app.js",
    "dev": "nodemon",
    "m:generate": "typeorm-ts-node-esm migration:generate ./src/infrastructure/db/migrations/$npm_config_name -d ./src/infrastructure/db/ormconfig.ts",
    "m:run": "typeorm-ts-node-esm migration:run -d ./src/infrastructure/db/ormconfig.ts",
    "m:show": "typeorm-ts-node-esm migration:show -d ./src/infrastructure/db/ormconfig.ts",
    "lint": "eslint 'src/**/*.{ts,tsx}'",
    "lint:ts": "npx tsc --noEmit",
    "lint:fix": "eslint 'src/**/*.{ts,tsx}' --fix",
    "format": "prettier --write 'src/**/*.{ts,tsx,js,json,md}'"
  },
  "nodemonConfig": {
    "verbose": true,
    "watch": "src/",
    "delay": "1000",
    "restartable": "r",
    "max_restarts": "5",
    "env": {
      "NODE_ENV": "debug",
      "DB_HOST": "localhost",
      "APP_PORT": 8000,
      "DB_PORT": 5432
    },
    "ext": "ts",
    "exec": "node --trace-warnings --loader ts-node/esm src/app.ts"
  },
  "author": "Omer Bilgin",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.7.7",
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.3",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "pg": "^8.13.1",
    "typeorm": "^0.3.20",
    "typeorm-naming-strategies": "^4.1.0",
    "uuid": "^11.0.5"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/eslint": "^9.6.1",
    "@types/eslint__eslintrc": "^2.1.2",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.18.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.1",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.8.0",
    "@typescript-eslint/parser": "^8.23.0",
    "esbuild": "^0.25.3",
    "eslint": "^9.12.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-js": "github:eslint/js",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest": "^28.9.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-promise": "^7.1.0",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "nodemon": "^3.1.9",
    "prettier": "^3.3.3",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsc": "^2.0.4",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.23.0"
  }
}
